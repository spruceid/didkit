{
  "name": "didkit",
  "version": "0.0.1",
  "description": "",
  "main": "lib/index.js",
  "author": "Tiago Nascimento <tiago.nascimento@spruceid.com>",
  "license": "MIT",
  "dependencies": {
    "neon-cli": "^0.5.3",
    "node-notifier": "^8.0.1",
    "node-pre-gyp": "^0.17.0"
  },
  "devDependencies": {
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "node-pre-gyp-github": "^1.4.3",
    "prettier": "2.2.1",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "build": "neon build",
    "build-release": "neon build --release",
    "install": "node-pre-gyp install --fallback-to-build=false || neon build",
    "lint": "eslint .",
    "package": "node-pre-gyp package",
    "spec": "jest",
    "test": "npm run build && npm run spec",
    "upload-binary": "npm run build-release && node-pre-gyp package && node-pre-gyp-github publish",
    "version": "npm run build-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spruceid/didkit.git"
  },
  "files": [
    "native/index.node",
    "native/Cargo.toml",
    "native/build.rs",
    "native/src",
    "lib"
  ],
  "binary": {
    "module_name": "index",
    "host": "https://github.com/spruceid/didkit/releases/download/",
    "remote_path": "{version}",
    "package_name": "node-{node_abi}-{platform}-{arch}.tar.gz",
    "module_path": "./native",
    "pkg_path": "."
  },
  "jest": {
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "env": {
      "es6": true,
      "node": true
    }
  }
}
